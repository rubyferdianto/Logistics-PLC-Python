# Environment Configuration for Logistics PLC System
# Copy this file to .env and modify the values as needed

# Application Settings
APP_NAME=Logistics PLC System
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///logistics_plc.db
DATABASE_ECHO=False

# PLC Connection Settings
PLC_HOST=192.168.1.100
PLC_PORT=502
PLC_UNIT_ID=1
PLC_TIMEOUT=10

# OPC UA Settings
OPCUA_ENDPOINT=opc.tcp://192.168.1.100:4840
OPCUA_NAMESPACE=2

# MQTT Settings
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=logistics/plc

# Web Dashboard
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# Data Collection
DATA_COLLECTION_INTERVAL=5
ANALYTICS_INTERVAL=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/logistics_plc.log

# Alert Thresholds
JAM_DETECTION_THRESHOLD=30.0
TEMPERATURE_WARNING_THRESHOLD=75.0
VIBRATION_WARNING_THRESHOLD=5.0
